pipeline {
    agent any

    triggers {
        githubPush()
    }

    environment {
        DOCKER_IMAGE_NAME = 'scientific-dev-cal'
        GITHUB_REPO_URL = ''
    }

    stages {
        stage('Checkout') {
            steps {
                script {
                    git branch: 'main', url: GITHUB_REPO_URL
                }
            }
        }

        stage('Build and Test with Maven') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t $DOCKER_IMAGE_NAME .'
            }
        }

        stage('Push Docker Image') {
            steps {
                steps {
                    withCredentials([usernamePassword(credentialsId: 'docker-hub-credentials', usernameVariable: 'DOCKER_USERNAME', passwordVariable: 'DOCKER_PASSWORD')]) {
                        // sh 'echo "$DOCKER_PASSWORD" | docker login -u "$DOCKER_USERNAME" --password-stdin'
                        sh 'docker tag dev-cal $DOCKER_IMAGE'
                        sh 'docker images'
                        sh 'docker push $DOCKER_IMAGE'
                    }
                }
            }
        }

        stage('Run Ansible Playbook') {
            steps {
                script {
                    withCredentials([string(credentialsId: 'ANSIBLE_SUDO_PASS', variable: 'ANSIBLE_BECOME_PASS')]) {
                        sh '''
                            ansible-playbook -i inventory.ini deploy.yml --extra-vars "ansible_become_pass=$ANSIBLE_BECOME_PASS"
                        '''
                    }
                }
            }
        }
    }
}
